{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "noEmit": false,

    "allowJs": true,
    "checkJs": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  },
  "include": ["app", "index.ts", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
